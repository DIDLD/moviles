<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserDataView"
    android:background="@color/co"
    >



    <Button
        android:id="@+id/btn_volver_dash1"
        android:backgroundTint="@color/as"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Volver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_id_buscar"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginTop="68dp"
        android:ems="10"
        android:hint="Identificación"
        android:inputType="text"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_volver_dash1" />

    <Button
        android:layout_marginTop="15dp"
        android:id="@+id/btn_buscar_usuario"
        android:backgroundTint="@color/as"

        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Enviar"
        app:layout_constraintTop_toBottomOf="@id/input_id_buscar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tag_datos_usuario"
        android:layout_marginBottom="67dp" />

    <!-- Título de la sección -->
    <TextView
        android:id="@+id/tag_datos_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Datos Usuario"
        android:textSize="40sp"
        app:layout_constraintTop_toBottomOf="@id/btn_buscar_usuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"/>

    <!-- TextView para mostrar la identificación del usuario -->
    <TextView
        android:id="@+id/mostrar_id_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Identificación"
        app:layout_constraintTop_toBottomOf="@id/tag_datos_usuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TextView para mostrar el nombre del usuario -->
    <TextView
        android:id="@+id/mostrar_nombre_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nombre"
        app:layout_constraintTop_toBottomOf="@id/mostrar_id_usuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TextView para mostrar el apellido del usuario -->
    <TextView
        android:id="@+id/mostrar_apellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Apellido"
        app:layout_constraintTop_toBottomOf="@id/mostrar_nombre_usuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TextView para mostrar el teléfono del usuario -->
    <TextView
        android:id="@+id/mostrar_telefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Teléfono"
        app:layout_constraintTop_toBottomOf="@id/mostrar_apellido"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TextView para mostrar el correo del usuario -->
    <TextView
        android:id="@+id/mostrar_correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Correo"
        app:layout_constraintTop_toBottomOf="@id/mostrar_telefono"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TextView para mostrar la contraseña del usuario -->
    <TextView
        android:id="@+id/mostrar_contrasena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Contraseña"
        app:layout_constraintTop_toBottomOf="@id/mostrar_correo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
